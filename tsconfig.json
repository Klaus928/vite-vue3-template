{
  "compilerOptions": {
    "typeRoots": ["node_modules/@types"],
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "jsxFactory": "VueTsxSupport",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "baseUrl": "",
    "types": ["vite/client", "node"],
    "paths": {
      "@/*": ["src/*"],
      "#/*": ["types/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "types/**/*.d.ts",
    "types/**/*.ts",
    "build/**/*.d.ts",
    "build/**/*.ts",
    "vite.config.ts",
    "components.d.ts"
  ],
  "exclude": ["node_modules"]
}
